# =============================================================================
# ENVIRONMENT VARIABLES
# =============================================================================
# Copy this file to .env.local and fill in the values

# =============================================================================
# SUPABASE (Required)
# =============================================================================
# Get these from your Supabase project settings > API
NEXT_PUBLIC_SUPABASE_URL=your-supabase-project-url
NEXT_PUBLIC_SUPABASE_ANON_KEY=your-supabase-anon-key
SUPABASE_SERVICE_ROLE_KEY=your-supabase-service-role-key

# Database password for direct connections (Project Settings > Database)
SUPABASE_DB_PASSWORD=

# Personal Access Token for Supabase CLI (Account > Access Tokens)
SUPABASE_ACCESS_TOKEN=

# =============================================================================
# AI PROVIDERS (Required for AI features)
# =============================================================================
# OpenAI API key for photo analysis and AI features
# Get from: https://platform.openai.com/api-keys
OPENAI_API_KEY=your-openai-api-key

# Anthropic API key for Claude AI features
# Get from: https://console.anthropic.com/
ANTHROPIC_API_KEY=your-anthropic-api-key

# =============================================================================
# GOOGLE (Required for address autocomplete)
# =============================================================================
# Google Places API key for address autocomplete
# Enable Places API in Google Cloud Console
NEXT_PUBLIC_GOOGLE_PLACES_API_KEY=your-google-places-api-key

# =============================================================================
# APP CONFIGURATION
# =============================================================================
# Your application URL (no trailing slash)
NEXT_PUBLIC_APP_URL=http://localhost:3000

# =============================================================================
# ERROR TRACKING - SENTRY (Recommended for production)
# =============================================================================
# Get these from your Sentry project settings
# https://sentry.io/
SENTRY_DSN=
NEXT_PUBLIC_SENTRY_DSN=

# Sentry organization and project for source map uploads
SENTRY_ORG=
SENTRY_PROJECT=

# Sentry auth token for source map uploads (create at sentry.io/settings/auth-tokens/)
SENTRY_AUTH_TOKEN=

# =============================================================================
# RATE LIMITING - UPSTASH (Optional, for production scale)
# =============================================================================
# For multi-instance deployments, use Upstash Redis for distributed rate limiting
# Get from: https://console.upstash.com/
# Note: The app includes in-memory rate limiting by default
UPSTASH_REDIS_REST_URL=
UPSTASH_REDIS_REST_TOKEN=

# =============================================================================
# EMAIL NOTIFICATIONS - RESEND (Required for email notifications)
# =============================================================================
# Get your API key from: https://resend.com/api-keys
RESEND_API_KEY=

# Email sender configuration
EMAIL_FROM=notifications@yourdomain.com
EMAIL_FROM_NAME=Your Company Name

# =============================================================================
# PAYMENTS - STRIPE (Required for payment processing)
# =============================================================================
# Get from: https://dashboard.stripe.com/apikeys
STRIPE_SECRET_KEY=
STRIPE_PUBLISHABLE_KEY=
# Get from: https://dashboard.stripe.com/webhooks (after creating endpoint)
STRIPE_WEBHOOK_SECRET=

# =============================================================================
# SMS NOTIFICATIONS - TWILIO (Required for SMS features)
# =============================================================================
# Get from: https://console.twilio.com/
TWILIO_ACCOUNT_SID=
TWILIO_AUTH_TOKEN=
TWILIO_PHONE_NUMBER=

# =============================================================================
# CRON JOBS (Required for scheduled tasks in production)
# =============================================================================
# Secret for authenticating cron job requests
# Generate with: openssl rand -base64 32
CRON_SECRET=

# =============================================================================
# API KEY ENCRYPTION (Required for storing third-party API keys)
# =============================================================================
# Master key for encrypting API credentials at rest
# Generate with: openssl rand -base64 32
API_KEYS_ENCRYPTION_KEY=

# =============================================================================
# APP CONFIGURATION (Required)
# =============================================================================
# Base URL for your application (used in emails, webhooks, etc.)
# No trailing slash
NEXT_PUBLIC_BASE_URL=https://yourdomain.com

# =============================================================================
# SCHEDULING - CALENDLY (Optional)
# =============================================================================
# Calendly URL for scheduling consultations
NEXT_PUBLIC_CALENDLY_URL=

# =============================================================================
# DEVELOPMENT OPTIONS
# =============================================================================
# Set to 'true' to use mock data without real Supabase connection
NEXT_PUBLIC_MOCK_MODE=false

# Bypass business config validation (only for testing - never in production)
BYPASS_CONFIG_CHECK=false

# =============================================================================
# E2E TESTING (Required for running Playwright tests)
# =============================================================================
# Test admin account credentials (created via Supabase Auth Admin API)
TEST_ADMIN_EMAIL=
TEST_ADMIN_PASSWORD=
